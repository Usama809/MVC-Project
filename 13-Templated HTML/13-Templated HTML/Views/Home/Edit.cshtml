@using _13_Templated_HTML.Models
@model Employee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body> 
    <div> 
        @Html.DisplayName("Id")-@Html.Editor("Id")
        <br />
        <br />
        @Html.DisplayNameFor(x=>x.Name)- @Html.EditorFor(x=>x.Name)
        <br />
        <br />
        @Html.DisplayNameFor(x=>x.DateOfBirth) -@Html.EditorFor(x=>x.DateOfBirth)
        <br />
        <br />
        @Html.DisplayNameFor(x=>x.BirthTime) - @Html.EditorFor(x=>x.BirthTime) 
        <hr />
        <hr />
        @using (Html.BeginForm("myForm"))
        { 
            @Html.EditorForModel()
            <input type="submit" value="Press me"/>
        }
         

    </div>
</body>
</html>
